<robot name="pigoo">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.23 0.095 0.005" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>

  <link name="mid_plate">
    <visual>
      <geometry>
        <box size="0.23 0.095 0.005" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
  </link>


  <link name="top_plate">
    <visual>
      <geometry>
        <box size="0.23 0.095 0.005"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 .8 1"/>
      </material>
    </visual>
  </link>

  <link name="right_front_wheel">
    <visual>
      <geometry>
        <cylinder length=".025" radius="0.035"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
